<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ICT13580568B.GridPage"
    BackgroundColor="Gray">

    <Grid
        BackgroundColor="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <Button
            Text="Button"
            BackgroundColor="Blue"
            Grid.Column="0"
            Grid.Row="0" 
            Grid.ColumnSpan="2"/>

        <Button
            Text="Button"
            BackgroundColor="Blue"
            Grid.Column="1"
            Grid.Row="1" 
            Grid.RowSpan="2"/>
         <Button
            Text="Button"
            BackgroundColor="Blue"
            Grid.Column="2"
            Grid.Row="2" 
            />
    </Grid>
    
</ContentPage>